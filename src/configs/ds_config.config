{
    "bfloat16": {
        "enabled": "auto"
    },
    "optimizer": {
        "type": "Adam",
        "params": {
            "lr": 1e-5,
            "eps": 1e-8,
            "weight_decay": 1e-6,
            "betas":[0.9, 0.999]
        }
    },
    "scheduler": {
        "type": "WarmupLR",
        "params": {
            "warmup_min_lr": 1e-5,
            "warmup_max_lr": 1e-4,
            "warmup_num_steps": 1
        }
    },
    "zero_optimization": {
        "stage": 1,
        "offload_optimizer": {
            "device": "cpu",
            "pin_memory": true
        },
        "allgather_partitions": true,
        "allgather_bucket_size": 2e8,
        "overlap_comm": true,
        "reduce_scatter": true,
        "reduce_bucket_size": 2e8,
        "contiguous_gradients": true
    },
    "gradient_accumulation_steps": 8,
    "gradient_clipping": 0,
    "train_batch_size": 32
}